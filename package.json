{
  "name": "new-life-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "Monorepo for New Life Solutions",
  "scripts": {
    "dev": "cd apps/web && npm run dev",
    "build": "cd apps/web && npm run build",
    "preview": "cd apps/web && npm run preview",
    "check": "cd apps/web && npm run check",
    "install:web": "cd apps/web && npm install",
    "install:all": "npm run install:web",
    "create-tool": "node scripts/create-new-tool.js",
    "validate-tool": "node scripts/validate-new-tool.js",
    "test:all": "cd apps/web && npm run test",
    "test:accessibility": "cd apps/web && npx playwright test tests/accessibility",
    "test:visual": "cd apps/web && npx playwright test tests/visual",
    "test:functional": "cd apps/web && npx playwright test tests/*.spec.ts --grep -v accessibility --grep -v visual"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "js-yaml": "^4.1.1"
  },
  "dependencies": {
    "isomorphic-dompurify": "^2.36.0"
  }
}
