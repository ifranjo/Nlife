---
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = 'New Life Solutions - Free Online Tools 2025',
  description = 'Free browser-based tools for PDF, images, video & more. 100% private, no uploads. Works offline. Updated December 2025.',
  image = '/og-default.png'
} = Astro.props;

const siteUrl = Astro.url.origin;

// Current date for freshness signals (GEO 2025 best practice)
const currentDate = new Date().toISOString();
const currentYear = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <!-- Freshness signals for GEO/AEO (Dec 2025) -->
    <meta name="date" content={currentDate} />
    <meta name="revised" content={currentDate} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="article" />
    <meta property="og:image" content={`${siteUrl}${image}`} />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:site_name" content="New Life Solutions" />
    <meta property="og:locale" content="en_US" />

    <!-- Article freshness (critical for AI citations) -->
    <meta property="article:published_time" content="2024-12-01T00:00:00Z" />
    <meta property="article:modified_time" content={currentDate} />
    <meta property="article:author" content="New Life Solutions" />
    <meta property="article:section" content="Technology" />
    <meta property="article:tag" content="free online tools" />
    <meta property="article:tag" content="browser-based" />
    <meta property="article:tag" content={`${currentYear}`} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${siteUrl}${image}`} />
    <meta name="twitter:site" content="@newlifesolutions" />

    <!-- Additional SEO signals -->
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <link rel="canonical" href={Astro.url.href} />

    <!-- GEO 2025: AI Search Engine Optimization Meta Tags -->
    <!-- These help AI crawlers understand and cite content -->
    <meta name="ai-content-declaration" content="human-created, factually-verified" />
    <meta name="citation-format" content="structured, extractable" />
    <meta name="content-type" content="tool-documentation, how-to-guide" />

    <!-- AI Crawler Hints (GEO 2025) -->
    <meta name="ai-summary" content={description} />
    <meta name="answer-target" content="direct-answer, featured-snippet, ai-overview" />

    <!-- Entity signals for knowledge graph (helps AI understand what this is) -->
    <meta name="entity-type" content="WebApplication, SoftwareApplication" />
    <meta name="entity-category" content="Productivity, Utility, Browser-Based Tool" />

    <!-- Freshness signals specifically for AI (research shows these matter) -->
    <meta name="last-verified" content={currentDate} />
    <meta name="content-accuracy" content="verified-december-2025" />

    <!-- Plausible Analytics (with custom events support) -->
    <script defer data-domain="newlifesolutions.dev" src="https://plausible.io/js/script.tagged-events.js"></script>

    <!-- Named slot for page-specific head content (schemas, hreflang, etc.) -->
    <slot name="head" />
  </head>
  <body>
    <!-- Background effects -->
    <div class="grid-bg"></div>
    <div class="scanlines"></div>

    <!-- Content -->
    <div class="relative z-10">
      <slot />
    </div>

    <!-- Vercel Analytics & Speed Insights -->
    <Analytics />
    <SpeedInsights />
  </body>
</html>
