---
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalUrl?: string; // Optional override for canonical URL
  theme?: 'default' | 'clean'; // Theme variant: default (hacker) or clean (professional)
}

const {
  title = 'New Life Solutions - Free Online Tools 2025',
  description = 'Free browser-based tools for PDF, images, video & more. 100% private, no uploads. Works offline. Updated December 2025.',
  image = '/og-default.png',
  canonicalUrl,
  theme = 'default'
} = Astro.props;

const siteUrl = Astro.url.origin;
// Use provided canonical or generate from current URL
const canonical = canonicalUrl || Astro.url.href;

// Current date for freshness signals (GEO 2025 best practice)
const currentDate = new Date().toISOString();
const currentYear = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="en" data-theme={theme}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <!-- Freshness signals for GEO/AEO (Dec 2025) -->
    <meta name="date" content={currentDate} />
    <meta name="revised" content={currentDate} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="article" />
    <meta property="og:image" content={`${siteUrl}${image}`} />
    <meta property="og:url" content={canonical} />
    <meta property="og:site_name" content="New Life Solutions" />
    <meta property="og:locale" content="en_US" />

    <!-- Article freshness (critical for AI citations) -->
    <meta property="article:published_time" content="2024-12-01T00:00:00Z" />
    <meta property="article:modified_time" content={currentDate} />
    <meta property="article:author" content="New Life Solutions" />
    <meta property="article:section" content="Technology" />
    <meta property="article:tag" content="free online tools" />
    <meta property="article:tag" content="browser-based" />
    <meta property="article:tag" content={`${currentYear}`} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${siteUrl}${image}`} />
    <meta name="twitter:site" content="@newlifesolutions" />

    <!-- Additional SEO signals -->
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <link rel="canonical" href={canonical} />

    <!-- PWA Manifest -->
    <link rel="manifest" href="/manifest.json" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="New Life Tools" />

    <!-- Apple Touch Icons -->
    <link rel="apple-touch-icon" sizes="152x152" href="/icons/icon-152x152.png" />
    <link rel="apple-touch-icon" sizes="192x192" href="/icons/icon-192x192.png" />
    <link rel="apple-touch-icon" sizes="512x512" href="/icons/icon-512x512.png" />

    <!-- GEO 2025: AI Search Engine Optimization Meta Tags -->
    <!-- These help AI crawlers understand and cite content -->
    <meta name="ai-content-declaration" content="human-created, factually-verified" />
    <meta name="citation-format" content="structured, extractable" />
    <meta name="content-type" content="tool-documentation, how-to-guide" />

    <!-- AI Crawler Hints (GEO 2025) -->
    <meta name="ai-summary" content={description} />
    <meta name="answer-target" content="direct-answer, featured-snippet, ai-overview" />

    <!-- Entity signals for knowledge graph (helps AI understand what this is) -->
    <meta name="entity-type" content="WebApplication, SoftwareApplication" />
    <meta name="entity-category" content="Productivity, Utility, Browser-Based Tool" />

    <!-- Freshness signals specifically for AI (research shows these matter) -->
    <meta name="last-verified" content={currentDate} />
    <meta name="content-accuracy" content="verified-december-2025" />

    <!-- Plausible Analytics (with custom events support) -->
    <script defer data-domain="newlifesolutions.dev" src="https://plausible.io/js/script.tagged-events.js"></script>

    <!-- Service Worker Registration -->
    <script is:inline>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker
            .register('/sw.js')
            .then((registration) => {
              console.log('[PWA] Service Worker registered:', registration.scope);

              // Check for updates every hour
              setInterval(() => {
                registration.update();
              }, 3600000);

              // Listen for updates
              registration.addEventListener('updatefound', () => {
                const newWorker = registration.installing;
                if (newWorker) {
                  newWorker.addEventListener('statechange', () => {
                    if (newWorker.state === 'installed' && navigator.serviceWorker.controller) {
                      // New service worker available
                      console.log('[PWA] New version available. Refresh to update.');
                      if (confirm('New version available! Reload to update?')) {
                        newWorker.postMessage({ type: 'SKIP_WAITING' });
                        window.location.reload();
                      }
                    }
                  });
                }
              });
            })
            .catch((error) => {
              console.error('[PWA] Service Worker registration failed:', error);
            });

          // Handle service worker updates
          navigator.serviceWorker.addEventListener('controllerchange', () => {
            console.log('[PWA] Controller changed, reloading...');
            window.location.reload();
          });
        });
      }
    </script>

    <!-- Named slot for page-specific head content (schemas, hreflang, etc.) -->
    <slot name="head" />
  </head>
  <body>
    <!-- Skip link for keyboard navigation (WCAG 2.4.1) -->
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <!-- Background effects (hidden for clean theme) -->
    <div class="grid-bg"></div>
    <div class="scanlines"></div>

    <!-- Content -->
    <div class="relative z-10">
      <slot />
    </div>

    <!-- Persistent aria-live region for screen reader announcements (WCAG) -->
    <!-- IMPORTANT: This element must exist in DOM on page load, never remove -->
    <div
      id="status-announcer"
      role="status"
      aria-live="polite"
      aria-atomic="true"
      class="sr-only"
    ></div>

    <!-- Alert region for urgent announcements -->
    <div
      id="alert-announcer"
      role="alert"
      aria-live="assertive"
      aria-atomic="true"
      class="sr-only"
    ></div>

    <!-- Global announce utility -->
    <script is:inline>
      window.announce = function(message, priority = 'polite') {
        const announcer = document.getElementById(
          priority === 'assertive' ? 'alert-announcer' : 'status-announcer'
        );
        if (announcer) {
          // Clear first to ensure repeat messages are announced
          announcer.textContent = '';
          requestAnimationFrame(() => {
            announcer.textContent = message;
          });
        }
      };
    </script>

    <!-- Vercel Analytics & Speed Insights -->
    <Analytics />
    <SpeedInsights />
  </body>
</html>
