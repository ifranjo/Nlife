---
/**
 * Use Cases Index Page
 * Lists all programmatic use-case landing pages
 */
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/ui/Navbar.astro';
import Footer from '../../components/ui/Footer.astro';

interface UseCase {
  title: string;
  description: string;
  href: string;
  tool: string;
  color: string;
}

const useCases: UseCase[] = [
  {
    title: "Merge Invoice PDFs",
    description: "Combine multiple invoices for accounting, tax filing, or expense reports",
    href: "/use-cases/pdf-merge-invoices",
    tool: "PDF Merge",
    color: "emerald"
  },
  {
    title: "Compress Video for Email",
    description: "Reduce video size to fit Gmail, Outlook, and other email attachment limits",
    href: "/use-cases/compress-video-email",
    tool: "Video Compressor",
    color: "blue"
  },
  {
    title: "Compress Video for WhatsApp",
    description: "Get videos under WhatsApp's 16MB limit while keeping quality",
    href: "/use-cases/compress-video-whatsapp",
    tool: "Video Compressor",
    color: "green"
  },
  {
    title: "WiFi QR Code",
    description: "Let guests connect to your WiFi instantly by scanning a QR code",
    href: "/use-cases/qr-code-wifi",
    tool: "QR Generator",
    color: "purple"
  },
  {
    title: "Copy Text from Screenshots",
    description: "Extract and copy text from any screenshot using AI-powered OCR",
    href: "/use-cases/ocr-screenshot",
    tool: "OCR Extractor",
    color: "orange"
  }
];

const colorClasses: Record<string, { bg: string; text: string; border: string }> = {
  emerald: { bg: "bg-emerald-500/20", text: "text-emerald-400", border: "border-emerald-500/30" },
  blue: { bg: "bg-blue-500/20", text: "text-blue-400", border: "border-blue-500/30" },
  green: { bg: "bg-green-500/20", text: "text-green-400", border: "border-green-500/30" },
  purple: { bg: "bg-purple-500/20", text: "text-purple-400", border: "border-purple-500/30" },
  orange: { bg: "bg-orange-500/20", text: "text-orange-400", border: "border-orange-500/30" }
};
---

<Layout
  title="Use Cases - Tool Solutions for Common Tasks | New Life"
  description="Discover how to use our free tools for specific tasks: merge invoices, compress videos for email/WhatsApp, create WiFi QR codes, extract text from screenshots."
>
  <Navbar />

  <main class="pt-20 pb-16 px-6 min-h-screen">
    <div class="max-w-4xl mx-auto">
      <header class="mb-12 text-center">
        <h1 class="text-4xl font-bold text-[var(--text)] mb-4">
          Use Cases
        </h1>
        <p class="text-xl text-[var(--text-muted)] max-w-2xl mx-auto">
          Step-by-step solutions for common tasks. Find the right tool and learn how to use it.
        </p>
      </header>

      <div class="grid gap-6">
        {useCases.map((useCase) => {
          const colors = colorClasses[useCase.color];
          return (
            <a
              href={useCase.href}
              class="block bg-[var(--bg-secondary)] rounded-xl p-6 border border-[var(--border)] hover:border-[var(--accent)] transition-colors group"
            >
              <div class="flex items-start justify-between gap-4">
                <div>
                  <span class={`inline-block px-2 py-0.5 ${colors.bg} ${colors.text} rounded text-xs font-medium mb-2`}>
                    {useCase.tool}
                  </span>
                  <h2 class="text-xl font-semibold text-[var(--text)] group-hover:text-[var(--accent)] transition-colors">
                    {useCase.title}
                  </h2>
                  <p class="text-[var(--text-muted)] mt-1">
                    {useCase.description}
                  </p>
                </div>
                <svg
                  class="w-6 h-6 text-[var(--text-muted)] group-hover:text-[var(--accent)] transition-colors flex-shrink-0 mt-1"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </a>
          );
        })}
      </div>

      <div class="mt-12 text-center">
        <p class="text-[var(--text-muted)] mb-4">Looking for step-by-step tutorials?</p>
        <a
          href="/guides"
          class="inline-block px-6 py-3 bg-[var(--accent)] text-[var(--bg)] rounded-lg font-semibold hover:opacity-90 transition-opacity"
        >
          Browse All Guides
        </a>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
