---
/**
 * Programmatic SEO: QR Code for WiFi
 * Target: "wifi qr code generator", "qr code for wifi password", "share wifi qr"
 */
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/ui/Navbar.astro';
import Footer from '../../components/ui/Footer.astro';

const schema = {
  "@context": "https://schema.org",
  "@type": "HowTo",
  "name": "How to Create a WiFi QR Code",
  "description": "Generate a QR code that lets guests connect to your WiFi network instantly by scanning - no typing passwords.",
  "step": [
    { "@type": "HowToStep", "text": "Enter your WiFi network name (SSID)" },
    { "@type": "HowToStep", "text": "Enter your WiFi password" },
    { "@type": "HowToStep", "text": "Select security type (WPA/WPA2)" },
    { "@type": "HowToStep", "text": "Generate and download QR code" }
  ]
};
---

<Layout
  title="WiFi QR Code Generator Free - Share WiFi Password | New Life"
  description="Generate a QR code for your WiFi network. Guests scan to connect instantly - no typing passwords. Free, works offline, no data stored."
>
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  <Navbar />

  <main class="pt-20 pb-16 px-6 min-h-screen">
    <article class="max-w-3xl mx-auto">
      <nav class="text-sm text-[var(--text-muted)] mb-6">
        <a href="/" class="hover:text-[var(--accent)]">Home</a>
        <span class="mx-2">/</span>
        <a href="/tools/qr-generator" class="hover:text-[var(--accent)]">QR Generator</a>
        <span class="mx-2">/</span>
        <span>WiFi</span>
      </nav>

      <header class="mb-8">
        <span class="inline-block px-3 py-1 bg-purple-500/20 text-purple-400 rounded text-sm font-medium mb-4">
          Home &amp; Office
        </span>
        <h1 class="text-4xl font-bold text-[var(--text)] mb-4">
          Create a WiFi QR Code
        </h1>
        <p class="text-xl text-[var(--text-muted)]">
          Let guests connect to your WiFi by scanning a QR code. No more spelling out passwords.
        </p>
      </header>

      <div class="bg-purple-500/10 border border-purple-500/30 rounded-xl p-6 mb-8">
        <h2 class="text-lg font-semibold text-purple-400 mb-2">How It Works</h2>
        <p class="text-[var(--text)]">
          WiFi QR codes encode your network name, password, and security type. When scanned, phones automatically connect without manual entry.
        </p>
      </div>

      <section class="mb-10">
        <h2 class="text-2xl font-bold text-[var(--text)] mb-4">Perfect For</h2>
        <div class="grid md:grid-cols-3 gap-4">
          <div class="bg-[var(--bg-secondary)] rounded-lg p-4 border border-[var(--border)] text-center">
            <div class="text-3xl mb-2">üè†</div>
            <h3 class="font-semibold text-[var(--text)]">Home</h3>
            <p class="text-sm text-[var(--text-muted)]">Share with guests instantly</p>
          </div>
          <div class="bg-[var(--bg-secondary)] rounded-lg p-4 border border-[var(--border)] text-center">
            <div class="text-3xl mb-2">üè¢</div>
            <h3 class="font-semibold text-[var(--text)]">Office</h3>
            <p class="text-sm text-[var(--text-muted)]">Post in lobby or meeting rooms</p>
          </div>
          <div class="bg-[var(--bg-secondary)] rounded-lg p-4 border border-[var(--border)] text-center">
            <div class="text-3xl mb-2">‚òï</div>
            <h3 class="font-semibold text-[var(--text)]">Cafe/Shop</h3>
            <p class="text-sm text-[var(--text-muted)]">Display for customers</p>
          </div>
        </div>
      </section>

      <div class="bg-[var(--bg-secondary)] rounded-xl p-8 text-center mb-10 border border-[var(--border)]">
        <h2 class="text-2xl font-bold text-[var(--text)] mb-4">Generate Your WiFi QR Code</h2>
        <p class="text-[var(--text-muted)] mb-6">Free, private, works offline.</p>
        <a
          href="/tools/qr-generator"
          class="inline-block px-8 py-4 bg-[var(--accent)] text-[var(--bg)] rounded-lg font-semibold hover:opacity-90 transition-opacity text-lg"
        >
          Open QR Generator
        </a>
      </div>

      <section class="mb-10">
        <h2 class="text-2xl font-bold text-[var(--text)] mb-4">WiFi QR Code Format</h2>
        <div class="bg-[var(--bg-secondary)] rounded-lg p-6 border border-[var(--border)]">
          <p class="text-[var(--text-muted)] mb-3">WiFi QR codes use this format:</p>
          <code class="block bg-[var(--bg)] p-4 rounded text-sm text-[var(--text)] font-mono">
            WIFI:T:WPA;S:YourNetworkName;P:YourPassword;;
          </code>
          <ul class="mt-4 space-y-2 text-sm text-[var(--text-muted)]">
            <li><strong class="text-[var(--text)]">T:</strong> Security type (WPA, WEP, nopass)</li>
            <li><strong class="text-[var(--text)]">S:</strong> Network name (SSID)</li>
            <li><strong class="text-[var(--text)]">P:</strong> Password</li>
          </ul>
        </div>
      </section>

      <section class="mb-10">
        <h2 class="text-2xl font-bold text-[var(--text)] mb-4">Security Tips</h2>
        <div class="grid md:grid-cols-2 gap-4">
          <div class="bg-green-500/10 border border-green-500/30 rounded-lg p-4">
            <h3 class="font-semibold text-green-400 mb-2">Safe</h3>
            <ul class="text-sm text-[var(--text-muted)] space-y-1">
              <li>Guest network QR for visitors</li>
              <li>Post in private areas only</li>
              <li>Change password periodically</li>
            </ul>
          </div>
          <div class="bg-red-500/10 border border-red-500/30 rounded-lg p-4">
            <h3 class="font-semibold text-red-400 mb-2">Avoid</h3>
            <ul class="text-sm text-[var(--text-muted)] space-y-1">
              <li>Posting main network publicly</li>
              <li>Sharing QR with password online</li>
              <li>Using for sensitive networks</li>
            </ul>
          </div>
        </div>
      </section>

      <section>
        <h2 class="text-2xl font-bold text-[var(--text)] mb-4">Other QR Code Uses</h2>
        <div class="flex flex-wrap gap-3">
          <a href="/use-cases/qr-code-business-card" class="px-4 py-2 bg-[var(--bg-secondary)] rounded-lg text-[var(--text-muted)] hover:text-[var(--accent)] border border-[var(--border)]">
            Business Card QR
          </a>
          <a href="/tools/qr-generator" class="px-4 py-2 bg-[var(--bg-secondary)] rounded-lg text-[var(--text-muted)] hover:text-[var(--accent)] border border-[var(--border)]">
            URL QR Code
          </a>
        </div>
      </section>
    </article>
  </main>

  <Footer />
</Layout>
