---
/**
 * Compare Index Page
 * Lists all competitor comparison landing pages
 */
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/ui/Navbar.astro';
import Footer from '../../components/ui/Footer.astro';

const comparisons = [
  {
    title: 'Descript Alternative',
    description: 'Free video transcription without account or uploads. Unlimited usage vs 1 hour/month limit.',
    href: '/compare/descript-alternative',
    competitor: 'Descript',
    category: 'Video Transcription',
    savings: '$12/month',
    color: 'from-fuchsia-500 to-purple-500'
  },
  {
    title: 'Otter.ai Alternative',
    description: 'Unlimited audio transcription without 300 min/month limit. Works offline, 100% private.',
    href: '/compare/otter-ai-alternative',
    competitor: 'Otter.ai',
    category: 'Audio Transcription',
    savings: '$10-30/month',
    color: 'from-blue-500 to-cyan-500'
  },
  {
    title: 'Remove.bg Alternative',
    description: 'Unlimited background removal without watermarks or per-image fees. No account needed.',
    href: '/compare/remove-bg-alternative',
    competitor: 'Remove.bg',
    category: 'Background Removal',
    savings: '$0.20/image or $9/month',
    color: 'from-fuchsia-500 to-pink-500'
  },
  {
    title: 'Canva Background Remover Alternative',
    description: 'Remove backgrounds without Canva Pro subscription. Instant, private, no editor workflow.',
    href: '/compare/canva-background-remover-alternative',
    competitor: 'Canva Pro',
    category: 'Background Removal',
    savings: '$12.99/month',
    color: 'from-purple-500 to-pink-500'
  }
];
---

<Layout
  title="Free Alternatives to Popular Tools - Compare | New Life Solutions"
  description="Free, privacy-first alternatives to Descript, Otter.ai, Remove.bg, and Canva. No subscriptions, no uploads, no limits. 100% browser-based tools."
>
  <Navbar />

  <main class="pt-20 pb-16 px-6 min-h-screen">
    <div class="max-w-6xl mx-auto">

      <!-- Header -->
      <header class="text-center mb-12">
        <span class="inline-block px-4 py-2 bg-[var(--accent)]/20 text-[var(--accent)] rounded-lg text-sm font-medium mb-4">
          Privacy-First Alternatives
        </span>
        <h1 class="text-5xl font-bold text-[var(--text)] mb-6">
          Free Alternatives to Popular Tools
        </h1>
        <p class="text-xl text-[var(--text-muted)] max-w-3xl mx-auto">
          Stop paying monthly subscriptions for tools you can use for free. All our tools run in your browser -
          no uploads, no accounts, no limits. Your files never leave your device.
        </p>
      </header>

      <!-- Value Prop -->
      <section class="mb-16">
        <div class="grid md:grid-cols-3 gap-6">
          <div class="glass-card rounded-xl p-6 text-center">
            <div class="text-4xl mb-3">üí∞</div>
            <h3 class="text-lg font-semibold text-[var(--text)] mb-2">Save $100+/Month</h3>
            <p class="text-sm text-[var(--text-muted)]">
              Stop paying for Descript ($12), Otter.ai ($30), Remove.bg ($9), Canva Pro ($13). Use our free alternatives.
            </p>
          </div>
          <div class="glass-card rounded-xl p-6 text-center">
            <div class="text-4xl mb-3">üîí</div>
            <h3 class="text-lg font-semibold text-[var(--text)] mb-2">100% Private</h3>
            <p class="text-sm text-[var(--text-muted)]">
              Your files never leave your device. No uploads to cloud servers. No tracking. No data collection.
            </p>
          </div>
          <div class="glass-card rounded-xl p-6 text-center">
            <div class="text-4xl mb-3">‚àû</div>
            <h3 class="text-lg font-semibold text-[var(--text)] mb-2">No Limits</h3>
            <p class="text-sm text-[var(--text-muted)]">
              Unlimited usage. No monthly quotas. No per-file fees. No account required. Process as much as you need.
            </p>
          </div>
        </div>
      </section>

      <!-- Comparison Cards -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-[var(--text)] mb-8">Compare Popular Tools</h2>
        <div class="grid md:grid-cols-2 gap-6">
          {comparisons.map(comp => (
            <a
              href={comp.href}
              class="glass-card rounded-xl p-6 hover:border-[var(--accent)] transition-all duration-300 group block"
            >
              <div class="flex items-start justify-between mb-4">
                <div>
                  <span class="inline-block px-3 py-1 bg-[var(--bg-secondary)] text-[var(--text-muted)] rounded text-xs font-medium mb-2">
                    {comp.category}
                  </span>
                  <h3 class="text-xl font-bold text-[var(--text)] group-hover:text-[var(--accent)] transition-colors">
                    {comp.title}
                  </h3>
                </div>
                <div class="text-right">
                  <div class="text-xs text-[var(--text-muted)] mb-1">Save</div>
                  <div class="text-sm font-semibold text-[var(--success)]">{comp.savings}</div>
                </div>
              </div>

              <p class="text-[var(--text-muted)] mb-4">
                {comp.description}
              </p>

              <div class="flex items-center justify-between pt-4 border-t border-[var(--border)]">
                <div class="text-sm text-[var(--text-muted)]">
                  vs <span class="font-semibold text-[var(--text)]">{comp.competitor}</span>
                </div>
                <div class="text-[var(--accent)] group-hover:translate-x-1 transition-transform">
                  ‚Üí
                </div>
              </div>
            </a>
          ))}
        </div>
      </section>

      <!-- Why Choose Us -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-[var(--text)] mb-8 text-center">Why Use Browser-Based Tools?</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div class="glass-card rounded-xl p-6">
            <h3 class="text-xl font-semibold text-[var(--text)] mb-3">üõ°Ô∏è Privacy First</h3>
            <p class="text-[var(--text-muted)] mb-3">
              Files never leave your device. Competitors upload to cloud servers, creating privacy and compliance risks.
            </p>
            <ul class="space-y-2 text-sm text-[var(--text-muted)]">
              <li>‚úì No data breaches possible</li>
              <li>‚úì HIPAA/GDPR compliant by design</li>
              <li>‚úì Perfect for confidential content</li>
            </ul>
          </div>
          <div class="glass-card rounded-xl p-6">
            <h3 class="text-xl font-semibold text-[var(--text)] mb-3">‚ö° Instant Processing</h3>
            <p class="text-[var(--text-muted)] mb-3">
              No upload/download wait times. Processing starts immediately without network delays.
            </p>
            <ul class="space-y-2 text-sm text-[var(--text-muted)]">
              <li>‚úì No upload bottlenecks</li>
              <li>‚úì Works on slow connections</li>
              <li>‚úì Faster for small/medium files</li>
            </ul>
          </div>
          <div class="glass-card rounded-xl p-6">
            <h3 class="text-xl font-semibold text-[var(--text)] mb-3">‚úàÔ∏è Works Offline</h3>
            <p class="text-[var(--text-muted)] mb-3">
              After first page load, works without internet. Perfect for planes, trains, or unreliable connections.
            </p>
            <ul class="space-y-2 text-sm text-[var(--text-muted)]">
              <li>‚úì AI models cached in browser</li>
              <li>‚úì No internet required</li>
              <li>‚úì Works in remote locations</li>
            </ul>
          </div>
          <div class="glass-card rounded-xl p-6">
            <h3 class="text-xl font-semibold text-[var(--text)] mb-3">üí∞ Zero Cost</h3>
            <p class="text-[var(--text-muted)] mb-3">
              No subscriptions, no per-use fees, no hidden charges. Save $50-100/month vs competitors.
            </p>
            <ul class="space-y-2 text-sm text-[var(--text-muted)]">
              <li>‚úì No monthly quotas</li>
              <li>‚úì No credit card required</li>
              <li>‚úì No upgrade upsells</li>
            </ul>
          </div>
        </div>
      </section>

      <!-- CTA -->
      <section class="bg-gradient-to-r from-[var(--accent)]/10 to-purple-500/10 border border-[var(--accent)]/30 rounded-2xl p-12 text-center">
        <h2 class="text-3xl font-bold text-[var(--text)] mb-4">Ready to Stop Paying Monthly Fees?</h2>
        <p class="text-xl text-[var(--text-muted)] mb-8 max-w-2xl mx-auto">
          Explore our free, privacy-first alternatives to expensive SaaS tools. No accounts, no uploads, no limits.
        </p>
        <a
          href="/"
          class="inline-flex items-center gap-2 px-10 py-5 bg-[var(--accent)] text-[var(--bg)] rounded-xl font-bold hover:opacity-90 transition-opacity text-xl"
        >
          Browse All Free Tools ‚Üí
        </a>
      </section>

    </div>
  </main>

  <Footer />
</Layout>
