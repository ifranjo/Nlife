---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/ui/Navbar.astro';
import Footer from '../../components/ui/Footer.astro';
import RelatedTools from '../../components/seo/RelatedTools.astro';
import ImageCompress from '../../components/tools/ImageCompress';
---

<Layout title="Image Compress - New Life Solutions" description="Compress images without losing quality. Browser-based, private, free." image="/thumbnails/image-compress.svg">
  <Navbar />

  <main class="pt-20 pb-16 px-6 min-h-screen">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12">
        <a
          href="/hub"
          class="inline-flex items-center gap-2 text-[var(--text-muted)] hover:text-[var(--text)] transition-colors mb-8 text-xs uppercase tracking-[0.15em]"
        >
          <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back
        </a>

        <div class="w-12 h-12 mx-auto mb-4">
          <img src="/thumbnails/image-compress.svg" alt="Image Compress" class="w-full h-full" />
        </div>
        <h1 class="text-xl uppercase tracking-[0.3em] mb-4">Image Compress</h1>

        <p class="text-[var(--text-dim)] text-sm max-w-md mx-auto mb-6">
          Compress images up to 90% smaller. Supports PNG, JPEG, WebP.
          <span class="text-[var(--text)]">Files never leave your browser.</span>
        </p>

        <div class="flex items-center justify-center gap-4">
          <span class="tag tag-free">Free</span>
          <span class="text-[0.625rem] text-[var(--text-muted)] uppercase tracking-[0.15em]">No signup</span>
        </div>
      </div>

      <!-- Tool -->
      <ImageCompress client:load />

      <!-- Related Tools: Hub-spoke internal linking for SEO -->
      <RelatedTools currentToolId="image-compress" />
    </div>
  </main>

  <Footer />
</Layout>
