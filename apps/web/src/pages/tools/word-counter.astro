---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/ui/Navbar.astro';
import Footer from '../../components/ui/Footer.astro';
import WordCounter from '../../components/tools/WordCounter';
---

<Layout title="Word Counter - New Life Solutions" description="Count words, characters, sentences, and paragraphs. Free online word counter with reading time." image="/thumbnails/word-counter.svg">
  <Navbar />

  <main class="pt-20 pb-16 px-6 min-h-screen">
    <div class="max-w-3xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12">
        <a
          href="/hub"
          class="inline-flex items-center gap-2 text-[var(--text-muted)] hover:text-[var(--text)] transition-colors mb-8 text-xs uppercase tracking-[0.15em]"
        >
          <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back
        </a>

        <div class="w-12 h-12 mx-auto mb-4">
          <img src="/thumbnails/word-counter.svg" alt="Word Counter" class="w-full h-full" />
        </div>
        <h1 class="text-xl uppercase tracking-[0.3em] mb-4">Word Counter</h1>

        <p class="text-[var(--text-dim)] text-sm max-w-md mx-auto mb-6">
          Count words, characters, sentences, and paragraphs.
          <span class="text-[var(--text)]">Plus reading time and keyword density.</span>
        </p>

        <div class="flex items-center justify-center gap-4">
          <span class="tag tag-free">Free</span>
          <span class="text-[0.625rem] text-[var(--text-muted)] uppercase tracking-[0.15em]">Real-time</span>
        </div>
      </div>

      <!-- Tool -->
      <WordCounter client:load />
    </div>
  </main>

  <Footer />
</Layout>
