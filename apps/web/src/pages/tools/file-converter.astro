---
import Layout from '../../layouts/Layout.astro';
import TrustBar from '../../components/ui/TrustBar.astro';
import Navbar from '../../components/ui/Navbar.astro';
import Footer from '../../components/ui/Footer.astro';
import RelatedTools from '../../components/seo/RelatedTools.astro';
import FileConverter from '../../components/tools/FileConverter';
import { getToolById } from '../../lib/tools';

// Get tool data from Single Source of Truth (tools.ts)
const toolData = getToolById('file-converter');
if (!toolData) throw new Error('Tool not found: file-converter');

const seoTitle = toolData.seo?.title || `${toolData.name} - Free Online Tool | New Life Solutions`;
const seoDescription = toolData.seo?.metaDescription || toolData.description;
---

<Layout title={seoTitle} description={seoDescription} image="/thumbnails/file-converter.svg">
  <Navbar />

  <main class="pt-20 pb-16 px-6 min-h-screen">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12">
        <a
          href="/hub"
          class="inline-flex items-center gap-2 text-[var(--text-muted)] hover:text-[var(--text)] transition-colors mb-8 text-xs uppercase tracking-[0.15em]"
        >
          <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back
        </a>

        <div class="w-12 h-12 mx-auto mb-4">
          <img src="/thumbnails/file-converter.svg" alt="File Converter" class="w-full h-full" />
        </div>
        <h1 class="text-xl uppercase tracking-[0.3em] mb-4">Image Converter</h1>

        <p class="text-[var(--text-dim)] text-sm max-w-md mx-auto mb-6">
          Convert <span class="text-cyan-400 font-medium">HEIC to JPG</span> and other image formats.
          <span class="text-[var(--text)]">Files never leave your browser.</span>
        </p>

        <div class="flex items-center justify-center gap-4">
          <span class="tag tag-free">Free</span>
          <span class="text-[0.625rem] text-[var(--text-muted)] uppercase tracking-[0.15em]">No signup</span>
        </div>
      </div>

      <!-- Tool -->
      <FileConverter client:only="react" />

      <!-- SEO Content Section -->
      <section class="mt-16 space-y-12">
        <!-- Answer Box for AI/LLM extraction -->
        <div class="glass-card p-6 border-l-4 border-cyan-500">
          <h2 class="text-lg font-semibold text-white mb-3">How to Convert HEIC to JPG</h2>
          <p class="text-slate-300 text-sm leading-relaxed">
            Convert iPhone HEIC photos to JPG in 3 steps: 1) Drop or select your HEIC files, 2) Choose JPG, PNG, or WebP output format, 3) Click Convert and download.
            This free tool processes images entirely in your browser - your photos are never uploaded to any server.
            Supports batch conversion with ZIP download for multiple files.
          </p>
        </div>

        <!-- What is HEIC Section -->
        <div>
          <h2 class="text-lg font-semibold text-white mb-4">What is HEIC Format?</h2>
          <div class="glass-card p-6">
            <p class="text-slate-300 text-sm leading-relaxed mb-4">
              <strong class="text-white">HEIC (High Efficiency Image Container)</strong> is Apple's default photo format for iPhones and iPads since iOS 11.
              HEIC files are about 50% smaller than JPG while maintaining the same quality, but they're not universally compatible with Windows, web browsers, and many applications.
            </p>
            <p class="text-slate-400 text-sm">
              When you transfer photos from your iPhone to a PC or need to share them online, converting HEIC to JPG ensures maximum compatibility.
            </p>
          </div>
        </div>

        <!-- Why Use This Tool -->
        <div>
          <h2 class="text-lg font-semibold text-white mb-4">Why Use This Converter?</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="glass-card p-4">
              <div class="text-2xl mb-2">ðŸ”’</div>
              <h3 class="text-white font-medium mb-1">100% Private</h3>
              <p class="text-slate-400 text-sm">Images never leave your device. All conversion happens in your browser using the Canvas API and heic2any library.</p>
            </div>
            <div class="glass-card p-4">
              <div class="text-2xl mb-2">ðŸš€</div>
              <h3 class="text-white font-medium mb-1">Instant & Free</h3>
              <p class="text-slate-400 text-sm">No waiting, no upload time, no file size limits (beyond browser memory). Completely free with no watermarks.</p>
            </div>
            <div class="glass-card p-4">
              <div class="text-2xl mb-2">ðŸ“¦</div>
              <h3 class="text-white font-medium mb-1">Batch Processing</h3>
              <p class="text-slate-400 text-sm">Convert up to 20 images at once. Download all converted files as a single ZIP archive.</p>
            </div>
          </div>
        </div>

        <!-- Supported Formats -->
        <div>
          <h2 class="text-lg font-semibold text-white mb-4">Supported Format Conversions</h2>
          <div class="glass-card p-6">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
              <div>
                <h4 class="text-cyan-400 font-medium mb-2">HEIC to:</h4>
                <ul class="text-slate-400 space-y-1">
                  <li>HEIC to JPG</li>
                  <li>HEIC to PNG</li>
                  <li>HEIC to WebP</li>
                </ul>
              </div>
              <div>
                <h4 class="text-cyan-400 font-medium mb-2">PNG to:</h4>
                <ul class="text-slate-400 space-y-1">
                  <li>PNG to JPG</li>
                  <li>PNG to WebP</li>
                </ul>
              </div>
              <div>
                <h4 class="text-cyan-400 font-medium mb-2">WebP to:</h4>
                <ul class="text-slate-400 space-y-1">
                  <li>WebP to JPG</li>
                  <li>WebP to PNG</li>
                </ul>
              </div>
              <div>
                <h4 class="text-cyan-400 font-medium mb-2">Other:</h4>
                <ul class="text-slate-400 space-y-1">
                  <li>BMP to JPG/PNG</li>
                  <li>GIF to JPG/PNG</li>
                  <li>JPG to PNG/WebP</li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- FAQ Section -->
        <div>
          <h2 class="text-lg font-semibold text-white mb-4">Frequently Asked Questions</h2>
          <div class="space-y-4">
            <details class="glass-card p-4 group">
              <summary class="text-white font-medium cursor-pointer list-none flex justify-between items-center">
                Why can't I open HEIC files on Windows?
                <svg class="w-5 h-5 text-slate-400 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <p class="text-slate-400 text-sm mt-3">
                Windows doesn't natively support HEIC format. You need to install the HEVC Video Extensions from the Microsoft Store (paid) or use a free converter like this one to convert HEIC to JPG.
              </p>
            </details>

            <details class="glass-card p-4 group">
              <summary class="text-white font-medium cursor-pointer list-none flex justify-between items-center">
                Will converting HEIC to JPG reduce quality?
                <svg class="w-5 h-5 text-slate-400 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <p class="text-slate-400 text-sm mt-3">
                With the quality slider set to 90% or higher, the difference is imperceptible to the human eye. For archival purposes, choose PNG which is lossless. For everyday use, JPG at 90% offers the best balance of quality and file size.
              </p>
            </details>

            <details class="glass-card p-4 group">
              <summary class="text-white font-medium cursor-pointer list-none flex justify-between items-center">
                Are my photos uploaded to a server?
                <svg class="w-5 h-5 text-slate-400 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <p class="text-slate-400 text-sm mt-3">
                No, absolutely not. All image processing happens entirely in your web browser using the Canvas API and the heic2any JavaScript library. Your photos never leave your device - we have no servers to upload to.
              </p>
            </details>

            <details class="glass-card p-4 group">
              <summary class="text-white font-medium cursor-pointer list-none flex justify-between items-center">
                How do I convert multiple HEIC files at once?
                <svg class="w-5 h-5 text-slate-400 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <p class="text-slate-400 text-sm mt-3">
                Select multiple files when browsing, or drag and drop up to 20 images at once. After conversion, click "Download All as ZIP" to get all converted files in a single download.
              </p>
            </details>

            <details class="glass-card p-4 group">
              <summary class="text-white font-medium cursor-pointer list-none flex justify-between items-center">
                What's the best output format for iPhone photos?
                <svg class="w-5 h-5 text-slate-400 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <p class="text-slate-400 text-sm mt-3">
                <strong>JPG</strong> is the most compatible and widely supported. Use it for sharing photos on social media, email, or printing.
                <strong>PNG</strong> is best if your image has transparent areas.
                <strong>WebP</strong> offers the best compression but may not work in older software.
              </p>
            </details>
          </div>
        </div>
      </section>

      <!-- Related Tools -->
      <RelatedTools currentToolId="file-converter" />
    </div>
  </main>

  <Footer />
</Layout>

<!-- JSON-LD Schema Markup -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "HEIC to JPG Converter",
  "applicationCategory": "MultimediaApplication",
  "operatingSystem": "Web Browser",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  },
  "description": "Free online tool to convert HEIC photos from iPhone to JPG, PNG, or WebP. Also supports converting WebP, PNG, BMP to other formats. 100% browser-based and private.",
  "featureList": [
    "HEIC to JPG conversion",
    "HEIC to PNG conversion",
    "WebP to JPG conversion",
    "PNG to JPG conversion",
    "Batch conversion",
    "ZIP download",
    "Quality slider",
    "100% browser-based",
    "No file upload"
  ]
}
</script>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "HowTo",
  "name": "How to Convert HEIC to JPG",
  "description": "Convert iPhone HEIC photos to JPG format using this free online tool",
  "step": [
    {
      "@type": "HowToStep",
      "position": 1,
      "name": "Upload HEIC files",
      "text": "Click or drag and drop your HEIC files from iPhone into the upload area"
    },
    {
      "@type": "HowToStep",
      "position": 2,
      "name": "Select output format",
      "text": "Choose JPG, PNG, or WebP as your output format and adjust quality if needed"
    },
    {
      "@type": "HowToStep",
      "position": 3,
      "name": "Convert and download",
      "text": "Click Convert and download individual files or all at once as ZIP"
    }
  ],
  "totalTime": "PT1M"
}
</script>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Why can't I open HEIC files on Windows?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Windows doesn't natively support HEIC format. You need to install the HEVC Video Extensions from the Microsoft Store (paid) or use a free converter to convert HEIC to JPG."
      }
    },
    {
      "@type": "Question",
      "name": "Will converting HEIC to JPG reduce quality?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "With the quality slider set to 90% or higher, the difference is imperceptible to the human eye. For archival purposes, choose PNG which is lossless."
      }
    },
    {
      "@type": "Question",
      "name": "Are my photos uploaded to a server?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "No. All image processing happens entirely in your web browser. Your photos never leave your device."
      }
    },
    {
      "@type": "Question",
      "name": "How do I convert multiple HEIC files at once?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Select multiple files when browsing, or drag and drop up to 20 images at once. After conversion, click Download All as ZIP."
      }
    }
  ]
}
</script>
