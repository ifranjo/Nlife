---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/ui/Navbar.astro';
import Footer from '../../components/ui/Footer.astro';
import Base64Tool from '../../components/tools/Base64Tool';
---

<Layout title="Base64 Encoder/Decoder - New Life Solutions" description="Encode and decode Base64 data. Convert text and files to/from Base64. Browser-based, private, free." image="/thumbnails/base64.svg">
  <Navbar />

  <main class="pt-20 pb-16 px-6 min-h-screen">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12">
        <a
          href="/hub"
          class="inline-flex items-center gap-2 text-[var(--text-muted)] hover:text-[var(--text)] transition-colors mb-8 text-xs uppercase tracking-[0.15em]"
        >
          <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back
        </a>

        <div class="w-12 h-12 mx-auto mb-4">
          <img src="/thumbnails/base64.svg" alt="Base64 Encoder/Decoder" class="w-full h-full" />
        </div>
        <h1 class="text-xl uppercase tracking-[0.3em] mb-4">Base64 Encoder/Decoder</h1>

        <p class="text-[var(--text-dim)] text-sm max-w-md mx-auto mb-6">
          Encode text and files to Base64, or decode Base64 back to original format.
          <span class="text-[var(--text)]">All processing is client-side.</span>
        </p>

        <div class="flex items-center justify-center gap-4">
          <span class="tag tag-free">Free</span>
          <span class="text-[0.625rem] text-[var(--text-muted)] uppercase tracking-[0.15em]">No signup</span>
        </div>
      </div>

      <!-- Tool -->
      <Base64Tool client:load />
    </div>
  </main>

  <Footer />
</Layout>
