---
/**
 * Guides Hub - How-to articles for browser-based tools
 * SEO-optimized content hub linking to individual tool pages
 */
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/ui/Navbar.astro';
import Footer from '../../components/ui/Footer.astro';

const guides = [
  {
    title: 'How to Merge PDF Files Online Free',
    description: 'Step-by-step guide to combining multiple PDFs into one document without uploading files to servers.',
    href: '/guides/merge-pdf-online-free',
    category: 'PDF',
    readTime: '3 min',
    tool: '/tools/pdf-merge'
  },
  {
    title: 'How to Compress Video for Discord',
    description: 'Learn how to reduce video file size under 8MB for Discord free tier without losing quality.',
    href: '/guides/compress-video-for-discord',
    category: 'Video',
    readTime: '4 min',
    tool: '/tools/video-compressor'
  },
  {
    title: 'How to Remove Vocals from Songs for Karaoke',
    description: 'Create karaoke backing tracks by removing vocals from any song using browser-based tools.',
    href: '/guides/remove-vocals-karaoke',
    category: 'Audio',
    readTime: '3 min',
    tool: '/tools/remove-vocals'
  },
  {
    title: 'How to Transcribe Audio to Text Free',
    description: 'Convert speech to text using AI-powered transcription that runs entirely in your browser.',
    href: '/guides/transcribe-audio-to-text',
    category: 'AI',
    readTime: '4 min',
    tool: '/tools/audio-transcription'
  },
  {
    title: 'How to Extract Text from Images (OCR)',
    description: 'Use AI-powered OCR to extract text from screenshots, photos, and scanned documents.',
    href: '/guides/extract-text-from-images',
    category: 'Document',
    readTime: '3 min',
    tool: '/tools/ocr-extractor'
  }
];

const categoryColors: Record<string, string> = {
  'PDF': 'bg-red-500/20 text-red-400',
  'Video': 'bg-purple-500/20 text-purple-400',
  'Audio': 'bg-pink-500/20 text-pink-400',
  'AI': 'bg-blue-500/20 text-blue-400',
  'Document': 'bg-orange-500/20 text-orange-400'
};
---

<Layout
  title="Free Tool Guides - How-to Tutorials | New Life Solutions"
  description="Step-by-step guides for using free browser-based tools. Learn how to merge PDFs, compress videos, transcribe audio, and more without uploading files."
>
  <Navbar />

  <main class="pt-20 pb-16 px-6 min-h-screen">
    <div class="max-w-4xl mx-auto">

      <!-- Header -->
      <header class="text-center mb-12">
        <h1 class="text-4xl font-bold text-[var(--text)] mb-4">
          How-to Guides
        </h1>
        <p class="text-xl text-[var(--text-muted)] max-w-2xl mx-auto">
          Step-by-step tutorials for our free browser-based tools.
          No signups, no uploads, complete privacy.
        </p>
      </header>

      <!-- Guides Grid -->
      <div class="grid gap-6">
        {guides.map((guide) => (
          <article class="bg-[var(--bg-secondary)] rounded-xl p-6 hover:bg-[var(--bg-secondary)]/80 transition-colors border border-[var(--border)]">
            <a href={guide.href} class="block">
              <div class="flex items-start justify-between gap-4">
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <span class={`px-2 py-1 rounded text-xs font-medium ${categoryColors[guide.category]}`}>
                      {guide.category}
                    </span>
                    <span class="text-xs text-[var(--text-muted)]">{guide.readTime} read</span>
                  </div>
                  <h2 class="text-xl font-semibold text-[var(--text)] mb-2 hover:text-[var(--accent)] transition-colors">
                    {guide.title}
                  </h2>
                  <p class="text-[var(--text-muted)]">
                    {guide.description}
                  </p>
                </div>
                <div class="text-[var(--text-muted)] text-2xl">
                  &rarr;
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>

      <!-- CTA -->
      <div class="mt-12 text-center">
        <p class="text-[var(--text-muted)] mb-4">
          Ready to try our tools?
        </p>
        <a
          href="/hub"
          class="inline-block px-6 py-3 bg-[var(--accent)] text-[var(--bg)] rounded-lg font-medium hover:opacity-90 transition-opacity"
        >
          Browse All Tools
        </a>
      </div>

    </div>
  </main>

  <Footer />
</Layout>
