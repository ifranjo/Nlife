  }

  .updated-date {
    font-size: 0.6875rem;
    color: var(--text-muted);
    letter-spacing: 0.05em;
  }

  .updated-date time {
    color: var(--text-dim);
  }

  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.25rem;
    margin-bottom: 4rem;
  }

  .section-heading {
    font-size: 0.875rem;
