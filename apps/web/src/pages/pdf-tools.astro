  }

  .related-text {
    font-size: 0.75rem;
    line-height: 1.6;
    color: var(--text-dim);
  }

  @media (max-width: 640px) {
    .category-title {
      font-size: 1.5rem;
    }

    .tools-grid {
      grid-template-columns: 1fr;
    }

    .workflows-grid,
    .why-grid,
    .related-grid {
      grid-template-columns: 1fr;
    }

    .trust-signals {
      flex-direction: column;
      gap: 0.75rem;
    }
  }
</style>
