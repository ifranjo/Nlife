    text-align: center;
    transition: all 0.3s ease;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.02) 0%,
      rgba(255, 255, 255, 0.05) 100%
    );
  }

  .related-card:hover {
    border-color: var(--text-muted);
