---
/**
 * AnswerBox - AI-optimized citation block for tool pages (GEO 2025)
 *
 * Designed for LLM extraction and AI citations:
 * - First 40-60 words = "citation block" (what AI extracts)
 * - Standalone paragraphs (~800 tokens each)
 * - Schema.org markup for machine readability
 * - Trust signals reinforce E-E-A-T
 * - Updated date signals freshness
 *
 * Research shows: 32% of AI citations are listicles,
 * start each section with direct answer
 */

interface Props {
  title: string;           // H1: "Merge PDF Files Online — Free, Private, No Upload"
  tldr: string;            // 40-60 word direct answer (CITATION BLOCK)
  toolName: string;        // "PDF Merge"
  queryTarget: string;     // "How to Merge PDF Files Online Free"
  trustSignals?: string[]; // ["100% browser-based", "No data collection", "Works offline"]
}

const {
  title,
  tldr,
  toolName,
  queryTarget,
  trustSignals = [
    "100% browser-based",
    "No data collection",
    "Works offline"
  ]
} = Astro.props;

// Current date for freshness (GEO 2025)
const currentYear = new Date().getFullYear();
const lastUpdated = new Date().toLocaleDateString('en-US', { month: 'long', year: 'numeric' });
---

<section
  class="answer-box"
  itemscope
  itemtype="https://schema.org/HowTo"
  aria-label="Quick answer"
  data-ai-citation="true"
>
  <!-- Hidden structured data for AI extraction -->
  <meta itemprop="name" content={queryTarget} />
  <meta itemprop="dateModified" content={new Date().toISOString()} />

  <a
    href="/hub"
    class="back-link"
  >
    <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
    Back to Tools
  </a>

  <!-- H1 with year for freshness signals -->
  <h1 itemprop="description" class="answer-title">
    {title}
  </h1>

  <!-- CITATION BLOCK: 40-60 words that AI will extract -->
  <!-- This paragraph must stand alone and answer the query directly -->
  <p class="tldr citation-block" itemprop="text" data-ai-extract="primary">
    {tldr}
  </p>

  <!-- Trust signals as list (listicles get 32% of AI citations) -->
  <div class="trust-signals" role="list" aria-label="Features" itemscope itemtype="https://schema.org/ItemList">
    <meta itemprop="name" content={`${toolName} Features`} />
    {trustSignals.map((signal, index) => (
      <span
        class="trust-signal"
        role="listitem"
        itemprop="itemListElement"
        itemscope
        itemtype="https://schema.org/ListItem"
      >
        <meta itemprop="position" content={String(index + 1)} />
        <svg class="check-icon" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
        <span itemprop="name">{signal}</span>
      </span>
    ))}
  </div>

  <!-- Freshness indicator (Dec 2025 best practice) -->
  <p class="updated-date">
    <time datetime={new Date().toISOString()}>Updated {lastUpdated}</time> · Free forever
  </p>
</section>

<style>
  .answer-box {
    text-align: center;
    margin-bottom: 2rem;
    padding: 2rem;
    border: 1px solid var(--border);
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.02) 0%,
      rgba(255, 255, 255, 0.05) 100%
    );
    border-radius: 0;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.625rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 1.5rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--text);
  }

  .answer-title {
    font-size: 1.25rem;
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: 1rem;
    color: var(--text);
  }

  .tldr {
    font-size: 0.9375rem;
    line-height: 1.7;
    color: var(--text-dim);
    max-width: 36rem;
    margin: 0 auto 1.5rem;
  }

  .trust-signals {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }

  .trust-signal {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.6875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-muted);
  }

  .check-icon {
    width: 0.875rem;
    height: 0.875rem;
    color: #22c55e;
  }

  .updated-date {
    font-size: 0.6875rem;
    color: var(--text-muted);
    margin-top: 1rem;
    letter-spacing: 0.05em;
  }

  .updated-date time {
    color: var(--text-dim);
  }

  /* Citation block styling for AI extraction */
  .citation-block {
    /* Ensure standalone parsing */
    display: block;
    /* Optimal for LLM chunking */
    max-width: 42rem;
  }

  @media (max-width: 640px) {
    .answer-box {
      padding: 1.5rem 1rem;
    }

    .trust-signals {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
