---
/**
 * AnswerBox - Minimal header with hover tooltip
 *
 * Clean UX: Just title + ? icon
 * SEO preserved: TL;DR text in DOM (inside tooltip)
 */

import HelpTooltip from '../ui/HelpTooltip.astro';

interface Props {
  title: string;
  tldr: string;
  toolName: string;
  queryTarget?: string;
  trustSignals?: string[];
}

const { title, tldr, toolName } = Astro.props;
---

<section class="answer-box" aria-label="Tool header">
  <a href="/hub" class="back-link">‚Üê Back to Tools</a>

  <div class="title-row">
    <h1 class="answer-title">{title}</h1>
    <HelpTooltip content={tldr} id={`${toolName.toLowerCase().replace(/\s+/g, '-')}-help`} />
  </div>
</section>

<style>
  .answer-box {
    text-align: center;
    margin-bottom: 1rem;
    padding: 1.5rem 1rem 0.5rem;
  }

  .back-link {
    display: inline-block;
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.5625rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 1rem;
  }

  .back-link:hover { color: var(--text); }

  .title-row {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
  }

  .answer-title {
    font-size: 1.125rem;
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--text);
    margin: 0;
  }

  @media (max-width: 640px) {
    .answer-box { padding: 1rem 0.5rem 0.25rem; }
    .answer-title { font-size: 1rem; }
  }
</style>
