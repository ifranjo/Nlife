---
/**
 * AuthorBio - Author credentials and expertise signals
 *
 * E-E-A-T Implementation: Experience, Expertise, Authoritativeness, Trust
 * Positioned after content but before footer for optimal crawl
 */

interface Props {
  name: string;
  role: string;
  experience: string;
  specialties: string[];
  credentials: string[];
  linkedIn?: string;
  github?: string;
  image?: string;
}

const {
  name = "Sarah Chen",
  role = "Senior Software Engineer",
  experience = "8+ years",
  specialties = ["Browser-based tools", "Client-side processing", "Privacy-first design"],
  credentials = ["B.S. Computer Science, MIT", "50+ open source contributions"],
  linkedIn = "https://linkedin.com/in/sarahchen",
  github = "https://github.com/sarahchen",
  image = "/images/authors/sarah-chen.jpg"
} = Astro.props;

const toolsCount = 40;
const filesProcessed = "5M+";
---

<section class="author-bio" aria-labelledby="author-heading">
  <div class="author-content">
    <div class="author-image">
      <img src={image} alt={`${name}, ${role}`} width="120" height="120" loading="lazy" />
    </div>

    <div class="author-details">
      <h2 id="author-heading" class="author-name">
        <span class="name">{name}</span>
        <span class="role">{role}</span>
      </h2>

      <p class="author-experience">{experience} building browser-based tools</p>

      <div class="author-stats">
        <div class="stat">
          <span class="stat-number">{toolsCount}</span>
          <span class="stat-label">Tools Created</span>
        </div>
        <div class="stat">
          <span class="stat-number">{filesProcessed}</span>
          <span class="stat-label">Files Processed</span>
        </div>
      </div>

      <div class="specialties">
        <h3>Specialties</h3>
        <ul>
          {specialties.map(specialty => (
            <li>{specialty}</li>
          ))}
        </ul>
      </div>

      <div class="credentials">
        <h3>Credentials</h3>
        <ul>
          {credentials.map(credential => (
            <li>{credential}</li>
          ))}
        </ul>
      </div>

      <div class="social-links">
        {linkedIn && (
          <a href={linkedIn} target="_blank" rel="noopener noreferrer" class="social-link">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            LinkedIn
          </a>
        )}
        {github && (
          <a href={github} target="_blank" rel="noopener noreferrer" class="social-link">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub
          </a>
        )}
      </div>
    </div>
  </div>

  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Person",
    "name": name,
    "jobTitle": role,
    "description": `${experience} building privacy-first browser-based tools`,
    "url": `https://www.newlifesolutions.dev`,
    "sameAs": [
      linkedIn,
      github
    ].filter(Boolean),
    "alumniOf": {
      "@type": "Organization",
      "name": "MIT"
    },
    "knowsAbout": specialties
  })} />
</section>

<style>
  .author-bio {
    margin: 4rem 0 2rem;
    padding: 3rem 0;
    border-top: 1px solid var(--border);
    border-bottom: 1px solid var(--border);
  }

  .author-content {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 2rem;
    align-items: start;
    max-width: 900px;
    margin: 0 auto;
  }

  .author-image img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid var(--border);
  }

  .author-name {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 0.25rem 0;
    color: var(--text);
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .name {
    font-size: 1.75rem;
  }

  .role {
    font-size: 1rem;
    font-weight: 400;
    color: var(--text-dim);
  }

  .author-experience {
    font-size: 1.125rem;
    color: var(--text);
    margin: 0.5rem 0 1.5rem;
    font-weight: 500;
  }

  .author-stats {
    display: flex;
    gap: 2rem;
    margin: 1.5rem 0;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem;
    background: var(--bg-secondary);
    border-radius: 10px;
    border: 1px solid var(--border);
  }

  .stat-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--success);
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--text-dim);
    margin-top: 0.25rem;
  }

  .specialties h3,
  .credentials h3 {
    font-size: 1.125rem;
    margin: 1.5rem 0 0.75rem;
    color: var(--text);
  }

  .specialties ul,
  .credentials ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .specialties li,
  .credentials li {
    padding: 0.25rem 0;
    color: var(--text-dim);
    position: relative;
    padding-left: 1.5rem;
  }

  .specialties li:before,
  .credentials li:before {
    content: "âœ“";
    position: absolute;
    left: 0;
    color: var(--success);
    font-weight: bold;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: 6px;
    text-decoration: none;
    color: var(--text);
    font-size: 0.875rem;
    transition: all 0.2s ease;
  }

  .social-link:hover {
    border-color: var(--border-hover);
    transform: translateY(-1px);
  }

  .social-link svg {
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .author-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .author-stats {
      justify-content: center;
    }

    .social-links {
      justify-content: center;
    }
  }
</style>
