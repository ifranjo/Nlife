---
/**
 * QASections - Semantic Q&A sections for AI extraction
 *
 * Structure follows what LLMs look for:
 * - Question-based headings (H2)
 * - Direct answers in first sentence
 * - Scannable format with lists
 */

interface QAItem {
  question: string;
  answer: string;
  listItems?: string[];
}

interface Props {
  toolName: string;
  whatIs: {
    answer: string;
    context?: string;
  };
  howItWorks: {
    steps: string[];
  };
  whyBrowserBased: {
    benefits: string[];
  };
  faqs: QAItem[];
  stats?: Array<{
    label: string;
    value: string;
  }>;
}

const { toolName, whatIs, howItWorks, whyBrowserBased, faqs, stats } = Astro.props;
---

<section class="qa-sections" aria-label="Frequently asked questions about {toolName}">

  <!-- Statistics Section -->
  {stats && stats.length > 0 && (
    <article class="qa-block stats-block">
      <h2 class="qa-heading">Key Statistics</h2>
      <div class="stats-grid" data-ai-facts="true">
        {stats.map(stat => (
          <div class="stat-card">
            <span class="stat-value">{stat.value}</span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))}
      </div>
    </article>
  )}

  <!-- What is [Tool]? -->
  <article class="qa-block" itemscope itemtype="https://schema.org/Question">
    <h2 itemprop="name" class="qa-heading">
      What is {toolName}?
    </h2>
    <div itemprop="acceptedAnswer" itemscope itemtype="https://schema.org/Answer">
      <p itemprop="text" class="qa-answer">
        {whatIs.answer}
      </p>
      {whatIs.context && (
        <p class="qa-context">{whatIs.context}</p>
      )}
    </div>
  </article>

  <!-- How does it work? -->
  <article class="qa-block" itemscope itemtype="https://schema.org/HowTo">
    <h2 itemprop="name" class="qa-heading">
      How does {toolName} work?
    </h2>
    <ol class="steps-list" itemprop="step" itemscope itemtype="https://schema.org/HowToStep">
      {howItWorks.steps.map((step, index) => (
        <li class="step-item">
          <span class="step-number">{String(index + 1).padStart(2, '0')}</span>
          <span itemprop="text">{step}</span>
        </li>
      ))}
    </ol>
  </article>

  <!-- Why use browser-based? -->
  <article class="qa-block">
    <h2 class="qa-heading">
      Why use a browser-based tool?
    </h2>
    <ul class="benefits-list">
      {whyBrowserBased.benefits.map((benefit) => (
        <li class="benefit-item">
          <svg class="benefit-icon" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          {benefit}
        </li>
      ))}
    </ul>
  </article>

  <!-- FAQs with Schema -->
  <article class="qa-block faq-block">
    <h2 class="qa-heading">Common Questions</h2>
    <div class="faq-list" itemscope itemtype="https://schema.org/FAQPage">
      {faqs.map((faq) => (
        <details class="faq-item" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
          <summary itemprop="name" class="faq-question">
            {faq.question}
          </summary>
          <div itemprop="acceptedAnswer" itemscope itemtype="https://schema.org/Answer" class="faq-answer">
            <p itemprop="text">{faq.answer}</p>
            {faq.listItems && (
              <ul class="faq-list-items">
                {faq.listItems.map((item) => (
                  <li>{item}</li>
                ))}
              </ul>
            )}
          </div>
        </details>
      ))}
    </div>
  </article>

</section>

<style>
  .qa-sections {
    margin-top: 3rem;
    border-top: 1px solid var(--border);
    padding-top: 2rem;
  }

  .qa-block {
    margin-bottom: 2.5rem;
  }

  .qa-heading {
    font-size: 0.8125rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--text);
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .qa-heading::before {
    content: '';
    width: 1.5rem;
    height: 1px;
    background: var(--text-muted);
  }

  .qa-answer {
    font-size: 0.875rem;
    line-height: 1.7;
    color: var(--text-dim);
    max-width: 42rem;
  }

  .qa-context {
    font-size: 0.8125rem;
    color: var(--text-muted);
    margin-top: 0.75rem;
    font-style: italic;
  }

  /* Steps */
  .steps-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .step-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    font-size: 0.875rem;
    color: var(--text-dim);
  }

  .step-number {
    font-size: 0.6875rem;
    font-weight: 600;
    color: var(--text-muted);
    min-width: 1.5rem;
    padding-top: 0.125rem;
  }

  /* Benefits */
  .benefits-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.625rem;
  }

  .benefit-item {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    font-size: 0.875rem;
    color: var(--text-dim);
  }

  .benefit-icon {
    width: 1rem;
    height: 1rem;
    color: #22c55e;
    flex-shrink: 0;
  }

  /* FAQ */
  .faq-block {
    background: rgba(255, 255, 255, 0.01);
    border: 1px solid var(--border);
    padding: 1.5rem;
  }

  .faq-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .faq-item {
    border: 1px solid var(--border);
    background: transparent;
  }

  .faq-question {
    padding: 1rem;
    font-size: 0.8125rem;
    color: var(--text);
    cursor: pointer;
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .faq-question::after {
    content: '+';
    font-size: 1rem;
    color: var(--text-muted);
    transition: transform 0.2s ease;
  }

  .faq-item[open] .faq-question::after {
    content: 'âˆ’';
  }

  .faq-answer {
    padding: 0 1rem 1rem;
    font-size: 0.8125rem;
    line-height: 1.6;
    color: var(--text-dim);
  }

  .faq-list-items {
    margin-top: 0.75rem;
    padding-left: 1rem;
  }

  .faq-list-items li {
    margin-bottom: 0.25rem;
  }

  /* Statistics */
  .stats-block {
    background: rgba(255, 255, 255, 0.01);
    border: 1px solid var(--border);
    padding: 1.5rem;
    margin-bottom: 2.5rem;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1rem;
    margin-top: 1rem;
  }

  .stat-card {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 4px;
  }

  .stat-value {
    font-size: 0.875rem;
    font-weight: 600;
    color: #00ff00;
    line-height: 1.4;
  }

  .stat-label {
    font-size: 0.6875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-muted);
  }

  @media (max-width: 640px) {
    .stats-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
