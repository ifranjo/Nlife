---
const year = new Date().getFullYear();
---

<footer class="border-t border-[var(--border)] py-12 px-6">
  <div class="max-w-5xl mx-auto">
    <!-- Main Footer Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 mb-10">
      <!-- Brand -->
      <div>
        <div class="flex items-center gap-3 mb-4">
          <span class="inline-flex items-center justify-center w-8 h-8 rounded-lg border border-[var(--border)] bg-[var(--bg-secondary)] text-[10px] font-semibold tracking-[0.35em] text-[var(--text)] cursor-default group relative">
            NL
            <span class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 px-3 py-2
                         bg-[var(--bg)]/95 border border-[var(--border)] rounded-lg
                         opacity-0 group-hover:opacity-100 transition-opacity duration-300
                         pointer-events-none whitespace-nowrap text-[0.5rem] uppercase tracking-[0.15em]
                         text-[var(--text-muted)] shadow-xl backdrop-blur-sm z-50">
              <span class="block text-[var(--text-dim)] mb-1">Learning Project</span>
              <span class="block text-[0.45rem] text-[var(--text-muted)]">Astro 5 | React 19 | Tailwind v4 | TypeScript</span>
            </span>
          </span>
          <span class="text-[0.625rem] text-[var(--text-muted)] uppercase tracking-[0.2em]">
            New Life Solutions
          </span>
        </div>
        <p class="text-[0.6875rem] text-[var(--text-muted)] leading-relaxed">
          Browser-based tools that respect your privacy. All processing stays on your device.
        </p>
      </div>

      <!-- Tools -->
      <div>
        <h3 class="text-[0.625rem] uppercase tracking-[0.25em] text-[var(--text-dim)] mb-4 font-semibold">Tools</h3>
        <ul class="space-y-1">
          <li><a href="/hub?category=pdf" class="footer-link">PDF Tools</a></li>
          <li><a href="/hub?category=image" class="footer-link">Image Tools</a></li>
          <li><a href="/hub?category=video" class="footer-link">Video Tools</a></li>
          <li><a href="/hub?category=ai" class="footer-link">AI Tools</a></li>
          <li><a href="/hub" class="footer-link">All Tools</a></li>
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="text-[0.625rem] uppercase tracking-[0.25em] text-[var(--text-dim)] mb-4 font-semibold">Resources</h3>
        <ul class="space-y-1">
          <li><a href="/guides" class="footer-link">Guides</a></li>
          <li><a href="/use-cases" class="footer-link">Use Cases</a></li>
          <li><a href="/games" class="footer-link">Games</a></li>
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="text-[0.625rem] uppercase tracking-[0.25em] text-[var(--text-dim)] mb-4 font-semibold">Company</h3>
        <ul class="space-y-1">
          <li><a href="/hub#about" class="footer-link">About</a></li>
          <li><a href="/accessibility" class="footer-link">Accessibility</a></li>
          <li><a href="/privacy" class="footer-link">Privacy</a></li>
          <li><a href="/terms" class="footer-link">Terms</a></li>
        </ul>
      </div>
    </div>

    <!-- Trust Badges -->
    <div class="flex flex-wrap justify-center gap-6 py-6 border-t border-b border-[var(--border)] mb-6">
      <span class="trust-badge">100% Private</span>
      <span class="trust-badge">No Uploads</span>
      <span class="trust-badge">WCAG AA</span>
      <span class="trust-badge">Works Offline</span>
    </div>

    <!-- Bottom -->
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-[0.5rem] text-[var(--text-muted)] uppercase tracking-[0.2em]">
        &copy; {year} New Life Solutions. All rights reserved.
      </p>
      <div class="flex items-center gap-4 text-[0.625rem] text-[var(--text-muted)]">
        <span class="uppercase tracking-[0.15em]">v0.0.1</span>
        <span class="opacity-40">|</span>
        <span class="coords">41.40N 2.17E</span>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-link {
    display: flex;
    align-items: center;
    min-height: 2.25rem;
    font-size: 0.6875rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    transition: color 0.2s;
  }
  .footer-link:hover {
    color: var(--text);
  }
  .trust-badge {
    font-size: 0.5625rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--text-muted);
    padding: 0.25rem 0.75rem;
    border: 1px solid var(--border);
    border-radius: 9999px;
  }
</style>
