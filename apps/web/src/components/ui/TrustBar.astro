---
/**
 * TrustBar - Compact trust signals under a tool
 */

interface Props {
  signals?: string[];
}

const { signals = ['100% browser-based', 'No uploads', 'Works offline', 'No signup'] } = Astro.props;

const iconMap: Record<string, string> = {
  browser: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect x="3" y="4" width="18" height="12" rx="2" /><path d="M8 20h8" /><path d="M12 16v4" /></svg>',
  upload: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect x="5" y="11" width="14" height="9" rx="2" /><path d="M8 11V8a4 4 0 118 0v3" /></svg>',
  offline: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M2 8.5a15 15 0 0119 0" /><path d="M5 12a10.5 10.5 0 0114 0" /><path d="M8.5 15.5a6 6 0 017 0" /><circle cx="12" cy="19" r="1" fill="currentColor" /><path d="M3 3l18 18" /></svg>',
  signup: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><circle cx="12" cy="8" r="3" /><path d="M4 20c1.5-3 5-5 8-5s6.5 2 8 5" /></svg>',
  free: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><circle cx="12" cy="12" r="9" /><path d="M8 12l2.5 2.5L16 9" /></svg>',
  limit: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M7 12c2-4 8-4 10 0s-1.5 6-5 6-7-2-5-6z" /></svg>'
};

function getIconMarkup(signal: string): string {
  const lower = signal.toLowerCase();
  if (lower.includes('browser')) return iconMap.browser;
  if (lower.includes('upload') || lower.includes('private')) return iconMap.upload;
  if (lower.includes('offline')) return iconMap.offline;
  if (lower.includes('signup') || lower.includes('account')) return iconMap.signup;
  if (lower.includes('free')) return iconMap.free;
  if (lower.includes('limit')) return iconMap.limit;
  return iconMap.browser;
}
---

<div class="trust-bar">
  {signals.map(signal => (
    <span class="trust-item" title={signal}>
      <span class="trust-icon" set:html={getIconMarkup(signal)}></span>
      <span class="trust-label">{signal}</span>
    </span>
  ))}
</div>

<style>
  .trust-bar {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    padding: 0.75rem 0 0;
    margin-top: 0.5rem;
    border-top: 1px solid var(--border);
    flex-wrap: wrap;
  }

  .trust-item {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.6875rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-muted);
    cursor: default;
  }

  .trust-icon {
    display: inline-flex;
    width: 1.5rem;
    height: 1.5rem;
    align-items: center;
    justify-content: center;
    border-radius: 999px;
    border: 1px solid var(--border);
    color: var(--text-dim);
    background: var(--bg-secondary);
  }

  .trust-icon svg {
    width: 0.9rem;
    height: 0.9rem;
  }

  @media (max-width: 640px) {
    .trust-bar { gap: 1rem; }
    .trust-item { font-size: 0.625rem; }
  }
</style>
