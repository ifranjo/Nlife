---
import { tools } from '../../lib/tools';

// Calculate dynamic stats
const freeTools = tools.filter(t => t.tier === 'free');
const toolCount = freeTools.length;
---
<section class="relative pt-28 pb-16 px-6">
  <div class="max-w-5xl mx-auto text-center">
    <div class="inline-flex items-center gap-3 px-4 py-2 rounded-full border border-[var(--border)] bg-[var(--bg-secondary)] text-[0.625rem] uppercase tracking-[0.3em] text-[var(--text-dim)]">
      New Life Solutions
    </div>

    <h2 class="mt-6 text-3xl sm:text-4xl font-semibold text-[var(--text)] tracking-tight">
      Free online tools that keep your files private.
    </h2>

    <p class="text-[var(--text-dim)] max-w-2xl mx-auto mt-4 text-sm sm:text-base leading-relaxed">
      Merge PDFs, compress images, trim video, and generate files in seconds.
      Everything runs in your browser with no uploads, no accounts, and no limits.
    </p>

    <div class="mt-8 flex flex-wrap justify-center gap-4">
      <a href="#tools" class="btn-primary">
        <span>Browse All Tools</span>
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 12h14M13 6l6 6-6 6" />
        </svg>
      </a>
      <a href="/pdf-tools" class="btn-secondary">
        PDF Tools
      </a>
    </div>

    <div class="mt-12 grid grid-cols-1 sm:grid-cols-3 gap-4 max-w-4xl mx-auto">
      <div class="glass-card p-5 text-left">
        <div class="text-xs uppercase tracking-[0.2em] text-[var(--text-muted)]">Private by design</div>
        <p class="mt-2 text-sm text-[var(--text-dim)]">
          Files never leave your device. No uploads, no tracking, no storage.
        </p>
      </div>
      <div class="glass-card p-5 text-left">
        <div class="text-xs uppercase tracking-[0.2em] text-[var(--text-muted)]">Fast and offline</div>
        <p class="mt-2 text-sm text-[var(--text-dim)]">
          Everything runs locally in your browser, even without an internet connection.
        </p>
      </div>
      <div class="glass-card p-5 text-left">
        <div class="text-xs uppercase tracking-[0.2em] text-[var(--text-muted)]">Always free</div>
        <p class="mt-2 text-sm text-[var(--text-dim)]">
          {toolCount}+ tools with no accounts, no limits, and no hidden paywalls.
        </p>
      </div>
    </div>
  </div>
</section>
