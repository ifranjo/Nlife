---
import { tools } from '../../lib/tools';

// Calculate dynamic stats
const freeTools = tools.filter(t => t.tier === 'free');
const toolCount = freeTools.length;
---

<section class="relative pt-32 pb-20 px-6">
  <div class="max-w-4xl mx-auto text-center">
    <!-- Symbol -->
    <div class="text-5xl mb-8 pulse">â—ˆ</div>

    <!-- Brand Name (not h1 - page h1 is in main content) -->
    <p class="text-2xl sm:text-3xl tracking-[0.5em] uppercase mb-6 glitch" role="img" aria-label="New Life Solutions">
      New Life
    </p>

    <!-- Dots -->
    <div class="flex justify-center gap-3 mb-8">
      {[0, 1, 2, 3, 4, 5, 6].map((i) => (
        <span
          class="w-1.5 h-1.5 bg-[var(--text-muted)]"
          style={`animation: dotPulse 2s infinite; animation-delay: ${i * 0.15}s`}
        />
      ))}
    </div>

    <!-- Subtitle -->
    <p class="text-[var(--text-dim)] max-w-xl mx-auto mb-12 text-sm tracking-wide leading-relaxed">
      A collection of tools designed to simplify your digital workflow.
      <span class="text-[var(--text)]">Free. Private. Browser-based.</span>
    </p>

    <!-- CTA -->
    <a href="#tools" class="btn-primary">
      <span>Explore Tools</span>
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 9l-7 7-7-7" />
      </svg>
    </a>

    <!-- Stats -->
    <div class="mt-20 grid grid-cols-3 gap-8 max-w-lg mx-auto">
      <div class="text-center">
        <div class="text-2xl text-[var(--text)] mb-1">{toolCount}</div>
        <div class="text-[0.625rem] text-[var(--text-muted)] uppercase tracking-[0.15em]">Free Tools</div>
      </div>
      <div class="text-center">
        <div class="text-2xl text-[var(--text)] mb-1">100%</div>
        <div class="text-[0.625rem] text-[var(--text-muted)] uppercase tracking-[0.15em]">Private</div>
      </div>
      <div class="text-center">
        <div class="text-2xl text-[var(--text)] mb-1">$0</div>
        <div class="text-[0.625rem] text-[var(--text-muted)] uppercase tracking-[0.15em]">Cost</div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes dotPulse {
    0%, 100% { background: var(--text-muted); }
    50% { background: var(--accent); }
  }
</style>
