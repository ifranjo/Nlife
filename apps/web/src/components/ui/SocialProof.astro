---
interface Props {
  toolCount: number;
}
const { toolCount } = Astro.props;
---

<section class="py-12 px-6 border-t border-[var(--border)]">
  <div class="max-w-5xl mx-auto">
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
      <div class="glass-card p-5 text-center">
        <div class="text-2xl sm:text-3xl font-light text-[var(--text)]">{toolCount}+</div>
        <div class="text-[0.625rem] uppercase tracking-[0.2em] text-[var(--text-muted)] mt-2">Free Tools</div>
      </div>
      <div class="glass-card p-5 text-center">
        <div class="text-2xl sm:text-3xl font-light text-[var(--text)]">100%</div>
        <div class="text-[0.625rem] uppercase tracking-[0.2em] text-[var(--text-muted)] mt-2">Client-Side</div>
      </div>
      <div class="glass-card p-5 text-center">
        <div class="text-2xl sm:text-3xl font-light text-[var(--text)]">WCAG AA</div>
        <div class="text-[0.625rem] uppercase tracking-[0.2em] text-[var(--text-muted)] mt-2">Accessible</div>
      </div>
      <div class="glass-card p-5 text-center">
        <div class="text-2xl sm:text-3xl font-light text-[var(--text)]">Zero</div>
        <div class="text-[0.625rem] uppercase tracking-[0.2em] text-[var(--text-muted)] mt-2">Data Collection</div>
      </div>
    </div>
  </div>
</section>
